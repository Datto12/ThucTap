<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.SignUpActivity"
    android:orientation="vertical"
    android:background="#C8E4A7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Word"
        android:textColor="#DC3B08"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="E-Mail"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/edEmailSignUp"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/edPasswordSignUp"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Repect Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/edRePasswordSignUp"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/btnSignUp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#E1BE57"/>


</LinearLayout>